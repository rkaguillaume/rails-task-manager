<div class="container">
  <h1>My tasks</h1>

  <% @tasks.each do |task| %>
    <div>
      <input type="checkbox" <%= task.checked %> disabled>
      <label><%= link_to task.title, task_path(task) %> - </label>
      <%= link_to task_path(task),
        method: :delete,
        data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash-alt" ></i>
      <% end %>
    </div>
  <% end %>

  <div>
    <i class="fas fa-plus"></i> <%= link_to "New task", tasks_new_path %>
  </div>

</div>
